#sysctl net.ipv6.conf.all.accept_redirects=0
#sysctl net.ipv6.conf.all.send_redirects=0
#sysctl net.ipv6.conf.eth0.proxy_ndp=1
## Android fragmentation fix
#sysctl net.ipv4.ip_no_pmtu_disc=1

### Services
## IPv6
#service ndppd start